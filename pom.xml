<project
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.opendaylight.releng.autorelease</groupId>
  <artifactId>autorelease-root</artifactId>
  <version>1.2.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>autorelease</name> <!-- Used by Sonar to set project name -->

  <modules>
    <!-- Build OpenDaylight projects -->
    <module>aaa</module>
    <module>alto</module>
    <module>bgpcep</module>
    <module>bier</module>
    <module>controller</module>
    <module>dlux</module>
    <module>dluxapps</module>
    <module>faas</module>
    <module>federation</module>
    <module>genius</module>
    <module>groupbasedpolicy</module>
    <module>honeycomb/vbd</module>
    <module>infrautils</module>
    <module>integration/distribution</module>
    <module>iotdm</module>
    <module>l2switch</module>
    <module>lispflowmapping</module>
    <module>mdsal</module>
    <module>nemo</module>
    <module>netconf</module>
    <module>netide</module>
    <module>netvirt</module>
    <module>neutron</module>
    <module>next</module>
    <module>ocpplugin</module>
    <module>odlparent</module>
    <module>of-config</module>
    <module>openflowjava</module>
    <module>openflowplugin</module>
    <module>ovsdb</module>
    <module>packetcable</module>
    <module>sdninterfaceapp</module>
    <module>sfc</module>
    <module>snmp</module>
    <module>snmp4sdn</module>
    <module>sxp</module>
    <module>topoprocessing</module>
    <module>ttp</module>
    <module>unimgr</module>
    <module>usc</module>
    <module>vtn</module>
    <module>yangtools</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.5.2</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.18.1</version> <!-- same as odlparent -->
        <configuration>
          <excludes>
            <exclude>org.opendaylight.bgpcep.programming.impl.InstructionDeployerImplTest</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>

